{% block body %}
    <!--bandeau publicitaire-->
    <div class="grix my-4">
        <img src="http://lorempixel.com/1200/300/technics/PUB" alt="pub" class="responsive-media"></div>
    </div>

    <!-- new-->
    <h2 class="txt-center bg-cyan1 txt-prune">
        nos nouveaut√©s
                            
                    
            
