{% extends 'base.html.twig' %}

{% block title %}
    Products
{% endblock %}

{% block body %}

    <div class="container">
        <div class="card light-1 p-2 shadow-1 bg-cyan2">
            <div class="card-header txt-center bg-cyan">
                <h2>
                    {{ product.designation }}
                </h2>
                <h4>
                    {{ product.marque }}
                </h4>
            </div>
            <div class="divider"></div>
            <div class="card-content">
                <p>
                    {{ product.description }}
                </p>
            </div>
            <div class="divider"></div>
            <div class="card-footer">
                <button class="btn  bg-cyan1 press">
                    <a href="{{ path('products_index') }}">
                        back to list
                    </a>
                </button>
                <button class="btn  bg-cyan1 press">
                    <a href="{{ path('products_edit', {'id': product.id}) }}">
                        edit
                    </a>
                </button>
            </div>

        </div>
      

    </div>
{% endblock %}
