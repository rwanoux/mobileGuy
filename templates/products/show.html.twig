{% block title %}
	Products


{% endblock %}

{% block body %}

	<div class="container">
		<div class="grix xs4">
			<div class="col-xs2">
				<h3>{{product.marque}}</h3>
				<h1>{{product.designation}}</h1>
				<div class="txt-right">
					<h4>{{product.prix}}
						euros</h4>
